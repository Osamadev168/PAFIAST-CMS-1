@model List<AuthSystem.Areas.Identity.Data.ApplicationUser>;
@inject AuthSystem.Data.AuthDbContext _test;
@{
    ViewData["Title"] = "Verified Applicants";
}
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
</head>
<body style="background-color: whitesmoke">
    <h2 style="font-family: 'Times New Roman', Times, serif; color:cadetblue">List of verified applicants for: @ViewBag.TestName</h2>
    <table id="example" class="display table table-light table-hover table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Applicant Name</th>
                <th>Applicant Email</th>
                <th>Applicant Phone Number</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var applicant in Model)
            {
                <tr>
                    <td>@applicant.FirstName @applicant.LastName</td>
                    <td>@applicant.Email</td>
                    <td>@applicant.PhoneNumber</td>
                    <td><a class="btn btn-success" asp-route-userId="@applicant.Id" asp-action="ViewUserInfo" asp-controller="User">View Profile</a></td>

                </tr>

            }
        </tbody>
    </table>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
</body>
<script>
    $('#example').DataTable();
</script>