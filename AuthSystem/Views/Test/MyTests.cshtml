@model List<TestApplication>
@using Microsoft.AspNetCore.Identity
@using AuthSystem.Areas.Identity.Data
@inject AuthSystem.Data.AuthDbContext _test
@{
    ViewData["Title"] = "My Tests";
   

}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }



    .btn {
        display: inline-block;
        padding: 8px 12px;
        border: none;
        background-color: #007bff;
        color: #fff;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn:hover {
            display: inline-block;
            padding: 8px 12px;
            border: none;
            background-color: #007bcf;
            color: #fff;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
            cursor: pointer;
        }

    .btn-success {
        background-color: #28a745;
    }

    h4 {
        margin: 0;
        padding: 8px 0;
        color: #de3545;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    hr {
        border: none;
        border-top: 1px solid #ddd;
        margin: 20px 0;
    }
</style>


<h1>My tests for today (@DateTime.UtcNow.Date.ToString("D"))</h1>
<hr />

<table id="example">
    <thead>
        <tr>
            <th>
                Test Name
            </th>
            <th>
                Application Number
            </th>
            <th>
                Test Composition
            </th>
            <th>
                Test Center
            </th>
            <th>
                Timing 
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var test in Model)
        {
            var testCenter = _test.TestCenters.FirstOrDefault(w => w.Id == test.Calendar.TestCenterId);
            var startTime = test.Calendar.StartTime.ToString();
            var endTime = test.Calendar.StartTime.AddMinutes(test.Test.Duration).ToString();
            var testDate = test.Calendar.Date.ToString("D");
            var currentTime = TimeOnly.FromTimeSpan(DateTime.Now.TimeOfDay);
             
            <tr>
                <td>
                    @test.Test.TestName
                </td>
                <td>
                    @test.Id
                </td>
                <td>
                    @foreach (var testDetail in test.Test.TestDetails)
                    {
                        var subject = _test.Subjects.FirstOrDefault(w => w.SubjectId == testDetail.SubjectId);
                        <p>@subject.SubjectName @testDetail.Percentage%</p>
                    }
                </td>
                <td>
                    @testCenter?.TestCenterName
                </td>
                <td>
                    @test.Calendar.StartTime.ToString("hh:mm tt") -- @test.Calendar.StartTime.AddMinutes(test.Test.Duration).ToString("hh:mm tt")
                </td>
                <td>
                    @if (test.Calendar.StartTime <= currentTime && test.Calendar.EndTime >= currentTime)
                    
                    {
                        <a href="@Url.Action("DemoTest", "Test", new { id = test.TestId, C_Id = test.CalendarId, C_token = test.CalenderToken, testId = test.Id , applicationId = test.Id })" class="btn">Start Test</a>


                    }
                    else
                    {
                      <h4>Link Not Available</h4>    
                    
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    function calculateTimeDifferenceMillis(startTime) {
        var now = new Date();
        var start = new Date(now.toDateString() + " " + startTime); // Combine current date with the specified time
        return start - now;
    }

    var tests = @Html.Raw(Json.Serialize(Model.Where(t => t.Calendar.StartTime == TimeOnly.FromTimeSpan(DateTime.Now.TimeOfDay))));
    var now = new Date();

    tests.forEach(function (test) {
        var timeOnlyString = test.Calendar.StartTime.toString();
        var timeDifferenceMillis = calculateTimeDifferenceMillis(timeOnlyString);

        if (timeDifferenceMillis >= 0) {
            setTimeout(function () {
                location.reload();
            }, timeDifferenceMillis);
        }
    });
</script>


