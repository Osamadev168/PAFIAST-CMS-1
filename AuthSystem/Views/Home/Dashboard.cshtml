@{


}
<div class="p-4 sm:ml-64 mt-10">
    <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
        <div class="bg-gray-100 p-6 shadow-lg rounded-lg">
            <h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Upcoming events</h1>
            <div id="calendar" class="p-4"></div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth', // Month view
                events: [
                    {
                        title: 'Math Test',
                        start: '2023-08-01',
                        classNames: ['event-badge', 'bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300'],
                    },
                    {
                        title: 'Physics Exam',
                        start: '2023-08-07',
                        classNames: ['event-badge', 'bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300"'],
                    },
                    {
                        title: 'English Exam',
                        start: '2023-08-15',
                        classNames: ['event-badge', 'bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300"'],
                    },
                    // Multiple events on a single day
                    {
                        title: 'Event 1',
                        start: '2023-08-15',
                        classNames: ['event-badge', 'bg-blue-100 text-blue-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300"'],
                    },
                    {
                        title: 'Event 2',
                        start: '2023-08-15',
                        classNames: ['event-badge', 'bg-yellow-500'],
                    }
                    // Add more events...
                ],
                eventDidMount: function (info) {
                    // Use this callback to customize event rendering if needed
                },
            });

            calendar.render();
        });
    </script>
}