@{
    ViewData["Title"] = "Question|Select";
}
<div class="p-4 sm:ml-64 mt-10">
    <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
        <h1 class="text-2xl font-semibold mb-4">Select Question Type</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 question-type">
            <div class="bg-white rounded-lg shadow-md p-6 card-question-type hover:shadow-lg transition duration-300 ease-in-out transform hover:-translate-y-1">
                <a href="@Url.Action("CreationType", "QuestionType")" class="block">
                    <h3 class="text-lg font-semibold mb-2">Multiple Choice Question</h3>
                    <p>Create an MCQ in the question bank</p>
                </a>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6 card-question-type hover:shadow-lg transition duration-300 ease-in-out transform hover:-translate-y-1">
                <a href="@Url.Action("CreationTypeFIB", "QuestionType")" class="block">
                    <h3 class="text-lg font-semibold mb-2">Fill in the Blank</h3>
                    <p>Create a Fill in the Blank Question</p>
                </a>
            </div>
        </div>

</div>
</div>
</div>