<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | PAF-IAST Entry Test Service</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AuthSystem.styles.css" asp-append-version="true" />
  
</head>
<body style="background-color: ghostwhite">
    <nav class="navbar navbar-expand-md navbar-color fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">  <img src="~/logo.png"  class="logo-image"/>
                </a>
          
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto me-0">
                    <li class="nav-item">
                        <a class="nav-link" href="https://paf-iast.edu.pk/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://paf-iast.edu.pk/about-paf-iast/">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://paf-iast.edu.pk/contact/">Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column" style="margin-top: 50px;">
                     
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Subject">Question Bank</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Test" asp-controller="Test">Tests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Calendar">Apply</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="SelectCalendar" asp-controller="Calendar">Book Seat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ViewSubmittedApplications" asp-controller="Calendar">View Test Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="SystemStats" asp-controller="Test">System Stats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Applications" asp-controller="Applicant">My Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="CenterChangeRequests" asp-controller="Calendar">Center Requests</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <header class="pb-2">
                    <h1></h1>
                </header>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            $(".navbar-toggler").on("click", function () {
                $("#sidebarMenu").toggleClass("show");
            });
        });
    </script>
</body>
</html>
