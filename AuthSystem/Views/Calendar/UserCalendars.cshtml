@model List<AuthSystem.Models.UserCalendars>

<h2>Selected Test Calendars</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Test</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Applied On</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var userCalendar in Model)
            {
                <tr>
                    <td>@userCalendar.Test.TestName</td>
                    <td>@userCalendar.Calendar.StartTime</td>
                    <td>@userCalendar.Calendar.StartTime.AddMinutes(userCalendar.Test.Duration)</td>

                    <td>@userCalendar.SelectionTime</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No test calendars selected.</p>
}
