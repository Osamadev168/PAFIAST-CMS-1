@model List<AuthSystem.Models.UserCalendars>
@{
    ViewData["Title"] = "My Tests";
}
<h2>Selected Test Calendars</h2>

@if (Model != null)
{
    

    @if (Model.Count > 0)
    {
        <div class="container-sm table-responsive">
            <table class="table table-responsive table-striped table-dark table-hover ">
                <thead>
                    <tr>
                        <th>Test</th>
                        <th>Test Date</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Applied On</th>
                        <th>Test Center</th>
                        <th>Center Location/Address</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var userCalendar in Model)
                    {
                        <tr>
                            <td>@userCalendar.Test.TestName</td>
                            <td>@userCalendar.Calendar.Date.ToString("D")</td>
                            <td>@userCalendar.Calendar.StartTime</td>
                            <td>@userCalendar.Calendar.StartTime.AddMinutes(userCalendar.Test.Duration)</td>
                            <td>@userCalendar.SelectionTime.ToString("D")</td>
                            <td>@userCalendar.Calendar.TestCenter.TestCenterName</td>
                            <td>@userCalendar.Calendar.TestCenter.TestCenterLocation</td>
                            <td>Seat Confirmed</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
    else
    {
        <p>No test calendars selected.</p>
    }
}
